<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#B4B8C6"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_Paired"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/okno"
        android:gravity="center"
        android:lineSpacingExtra="14sp"
        android:textAlignment="center"
        android:textColor="#A9B2BC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_buttonpay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/okno"
        android:backgroundTint="@color/colortext"
        android:text="Оплатить"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_BtnPaired" />

    <ImageButton
        android:id="@+id/id_BtnOn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/oval"
        app:layout_constraintBottom_toTopOf="@+id/id_Paired"
        app:layout_constraintEnd_toStartOf="@+id/id_BtnOff"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_bluetoothon" />

    <ImageButton
        android:id="@+id/id_BtnOff"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/oval"
        app:layout_constraintBottom_toTopOf="@+id/id_Paired"
        app:layout_constraintEnd_toStartOf="@+id/id_BtnCard"
        app:layout_constraintStart_toEndOf="@+id/id_BtnOn"
        app:srcCompat="@drawable/ic_bluetoothoff" />

    <ImageButton
        android:id="@+id/id_BtnCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/oval"
        app:layout_constraintBottom_toTopOf="@+id/id_Paired"
        app:layout_constraintEnd_toStartOf="@+id/id_BtnRoute"
        app:layout_constraintStart_toEndOf="@+id/id_BtnOff"
        app:srcCompat="@drawable/ic_bankcard_foreground" />

    <ImageButton
        android:id="@+id/id_BtnRoute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/oval"
        app:layout_constraintBottom_toTopOf="@+id/id_Paired"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_BtnCard"
        app:srcCompat="@drawable/ic_busroute_foreground" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_BtnOn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/id_BtnOff" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/id_BtnCard" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/id_BtnRoute" />

    <ImageButton
        android:id="@+id/id_buttonclear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_Paired"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/id_BtnPaired"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="181dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/oval"
        android:backgroundTint="@color/colortext"
        app:layout_constraintBottom_toTopOf="@+id/id_buttonpay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_Paired"
        app:srcCompat="@android:drawable/ic_popup_sync"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:translationZ="10dp"/>/>

</androidx.constraintlayout.widget.ConstraintLayout>